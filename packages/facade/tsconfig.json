{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021"],
    "module": "es2020",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true, // enables importers to jump to source
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
}
