{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": "./src",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src"]
}
