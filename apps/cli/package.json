{
  "name": "@firestore-facade/cli",
  "version": "0.0.0-0",
  "description": "The facade generator CLI",
  "keywords": [
    "firebase",
    "firestore",
    "facade"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/0x80/firestore-facade"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "src"
  ],
  "type": "module",
  "scripts": {
    "xbuild": "tsup-node",
    "xdev": "tsup-node --watch",
    "generate": "tsx ./src/index.ts",
    "type:check": "tsc --noEmit",
    "test": "vitest",
    "lint": "prettier --check ."
  },
  "author": "Thijs Koerselman",
  "license": "MIT",
  "bin": {
    "generate-facade": "./bin/generate-facade.sh"
  },
  "dependencies": {
    "@sindresorhus/is": "^4.2.0",
    "firestore-facade": "*",
    "meow": "^10.1.2",
    "prettier": "^2.5.0",
    "ts-node": "^10.4.0",
    "tsx": "^4.7.1",
    "typescript": "^4.5.2",
    "yoctocolors": "^0.2.0"
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@types/node": "^16.11.12",
    "@types/prettier": "^2.4.2",
    "del-cli": "^5.1.0",
    "eslint": "^8.56.0",
    "eslint-config-0x80": "^0.0.0",
    "tsup": "^8.0.2"
  }
}
