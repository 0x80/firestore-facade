{
  "name": "@firestore-facade/cli",
  "version": "0.0.0-0",
  "description": "The facade generator CLI",
  "keywords": [
    "firebase",
    "firestore",
    "facade"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/0x80/firestore-facade"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "src"
  ],
  "type": "module",
  "scripts": {
    "xbuild": "tsup-node",
    "xdev": "tsup-node --watch",
    "generate": "tsx ./src/index.ts",
    "type:check": "tsc --noEmit",
    "test": "vitest",
    "lint": "eslint . --max-warnings 0"
  },
  "author": "Thijs Koerselman",
  "license": "MIT",
  "bin": {
    "generate-facade": "./bin/generate-facade.sh"
  },
  "dependencies": {
    "@sindresorhus/is": "^6.1.0",
    "firestore-facade": "^0.1.7",
    "meow": "^13.2.0",
    "prettier": "^3.2.5",
    "yoctocolors": "^1.0.0"
  },
  "devDependencies": {
    "@codecompose/eslint-config": "^1.0.0",
    "@repo/typescript-config": "*",
    "@types/node": "^20.11.19",
    "@types/prettier": "^3.0.0",
    "del-cli": "^5.1.0",
    "eslint": "^8.56.0",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
